<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <solid android:color="#2196F3" /> <!-- Màu xanh cho ngày được chọn -->
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#FFFFFF" /> <!-- Màu trắng cho ngày không được chọn -->
            <stroke android:width="1dp" android:color="#CCCCCC" /> <!-- Viền xám -->
            <corners android:radius="4dp" />
        </shape>
    </item>
</selector>