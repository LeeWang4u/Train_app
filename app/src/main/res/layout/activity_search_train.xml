<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <!-- Header Image (Placeholder for banner) -->
<!--    <ImageView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="150dp"-->
<!--        android:src="@drawable/he_thong_duong_sat_viet_nam"-->
<!--        android:scaleType="centerCrop"-->
<!--        android:contentDescription="Banner Image" />-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <!-- Departure Station -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chọn ga đi"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnDepartureStation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chọn ga đi"
        android:backgroundTint="#E0E0E0"
        android:textColor="#000000"
        android:layout_marginTop="8dp" />

    <!-- Arrival Station -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chọn ga đến"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnArrivalStation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chọn ga đến"
        android:backgroundTint="#E0E0E0"
        android:textColor="#000000"
        android:layout_marginTop="8dp" />

    <!-- Departure Date -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chọn ngày đi"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnDepartureDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chọn ngày đi"
        android:backgroundTint="#E0E0E0"
        android:textColor="#000000"
        android:layout_marginTop="8dp" />

    <!-- Search Button -->
    <Button
        android:id="@+id/btnSearchTrain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tìm chuyến tàu"
        android:textSize="20sp"
        android:backgroundTint="#2196F3"
        android:textColor="#FFFFFF"
        android:layout_marginTop="24dp" />

    <Button
        android:id="@+id/btnCheckTicket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tra cứu vé"
        android:textSize="20sp"
        android:backgroundTint="#2196F3"
        android:textColor="#FFFFFF"
        android:layout_marginTop="24dp" />
</LinearLayout>